@model FlowerBasketProject.Models.Entity.Image

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="ik ik-image bg-blue"></i>
                <div class="d-inline">
                    <h5>Image Details</h5>
                    <span>Details of the selected image</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><h3>Image Information</h3></div>
            <div class="card-body">
                <div class="form-group">
                    <dl class="row">
                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Url)</dt>
                        <dd class="col-sm-10">
                            <img src="@Model.Url" alt="Image" class="img-thumbnail" style="max-width: 100%;" />
                            @Html.DisplayFor(model => model.Url)
                        </dd>

                        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Product.Name)</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.Product.Name)</dd>
                    </dl>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
